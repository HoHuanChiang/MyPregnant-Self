<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#898989">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/physicalDayDetailsName"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/general_title_size"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ufo" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/total_padding_left"
        android:paddingBottom="@dimen/total_padding_left"
        android:textColor="@color/black"
        android:textSize="@dimen/general_size"
        android:gravity="center"
        android:id="@+id/physicalDayDetailsDate"
        android:background="@drawable/dotted_bottom"
        android:text="sdvsdvds"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/myYellow"
            android:paddingTop="@dimen/total_padding_left"
            android:paddingBottom="@dimen/total_padding_left"
            android:gravity="center"
            android:id="@+id/physicalDayDetailsLayout">
        </LinearLayout>
    </ScrollView>


</LinearLayout>