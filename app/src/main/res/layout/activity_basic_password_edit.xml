<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BasicPasswordEdit">
    <include layout="@layout/my_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittextbackground"
            android:id="@+id/basicPasswordCurrent"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textSize="@dimen/general_size"
            android:hint="目前的密碼"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittextbackground"
            android:id="@+id/basicPasswordNewFirst"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textSize="@dimen/general_size"
            android:hint="新密碼"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittextbackground"
            android:id="@+id/basicPasswordNewSecond"
            android:padding="12dp"
            android:textSize="@dimen/general_size"
            android:inputType="textPassword"
            android:hint="再次輸入你的密碼"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:src="@drawable/ok"
            android:id="@+id/basicPasswordSaveBtn"
            android:background="@null"/>
    </LinearLayout>
</LinearLayout>