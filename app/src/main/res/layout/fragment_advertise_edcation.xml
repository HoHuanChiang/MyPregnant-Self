<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdvertiseEducationFragment"
    android:background="@drawable/weird_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="當周衛教小知識"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:id="@+id/advertiseEducationTitle"
                android:textSize="@dimen/general_title_size"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:src="@drawable/speaker"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/advertiseEducationLayout"
                android:gravity="center">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>