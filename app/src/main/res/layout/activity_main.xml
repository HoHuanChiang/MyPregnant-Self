    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.7"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/mainSpotLight"
            android:src="@drawable/highlight"/>
        <LinearLayout
            android:id="@+id/mainOptionsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/questionnaireBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/main_questionnaire_unpress" />

            <ImageView
                android:id="@+id/educationBtn"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:padding="5dp"
                android:src="@drawable/main_education_unpress" />

            <ImageView
                android:id="@+id/videoBtn"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:src="@drawable/main_video_unpress" />

            <ImageView
                android:id="@+id/physicalBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/main_physical_unpress" />

            <ImageView
                android:id="@+id/recordBtn"
                android:layout_width="200px"
                android:layout_height="200px"
                android:padding="5dp"
                android:src="@drawable/main_record_unpress" />

            <ImageView
                android:id="@+id/scheduleBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/main_calendar_unpress" />

            <ImageView
                android:id="@+id/shopBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/main_shop_unpress" />

            <ImageView
                android:id="@+id/hospitalInfoBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/main_hospital_unpress" />
