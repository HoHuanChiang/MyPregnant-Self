<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:layout_marginLeft="5dp"
                android:id="@+id/mainSettingBtn"
                android:src="@drawable/main_setting" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快樂寶貝日記"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:id="@+id/main_top_text"
                android:layout_centerInParent="true"
                android:background="@drawable/text_background"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="#FDE5F1"
                android:id="@+id/mainViewPager"></androidx.viewpager.widget.ViewPager>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/mainPagerLayout"
                android:layout_weight="1.2"></LinearLayout>
        </LinearLayout>

        <!--
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/logo"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cloud_background"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:id="@+id/mainReturnCurrentWeek"
                android:src="@drawable/pin"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ufo"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:id="@+id/main_ufo"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16周"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:id="@+id/mainWeekText"
                android:textSize="@dimen/general_title_size"
                android:layout_centerHorizontal="true"/>
